@model Idear.Models.Topic

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit Topic</h1>

<form method="post" class="mt-3">
	<div class="form-group row">
		<label asp-for="Id" class="col-sm-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="Id" disabled class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="Name" class="col-sm-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="Name" class="form-control">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="ClosureDate" class="col-sm-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="ClosureDate" class="form-control" />
			<span asp-validation-for="ClosureDate" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="FinalClosureDate" class="col-sm-2 col-form-label"></label>
		<div class="col-10">
			<input asp-for="FinalClosureDate" class="form-control" />
			<span asp-validation-for="FinalClosureDate" class="text-danger"></span>
		</div>
	</div>

	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group row">
		<div class="col-10">
			<button type="submit" class="btn btn-dark"><i class="bi bi-card-checklist"></i> Update</button>
			<a asp-action="Index" class="btn btn-light"><i class="bi bi-arrow-return-left"></i> Back to list</a>
		</div>

	</div>
</form>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
